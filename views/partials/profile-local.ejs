<!-- LOCAL INFORMATION -->
<div class="col-sm-6">
    <div class="well">
       <h3>
          <span class="fa fa-user"></span> Local
       </h3>

        <% if (user.local.email) { %>
        
            <p>id:        <%= user._id %></p>
            <p>email:     <%= user.local.email %></p>
            <p>password:  <%= user.local.password %></p>
            <a href="/unlink/local" class="btn btn-default">Unlink</a>

        <% } else { %>

            <a href="/connect/local" class="btn btn-default">Connect Local</a>

        <% } %>

    </div>
 </div>