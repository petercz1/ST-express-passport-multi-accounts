<!-- github INFORMATION -->
<div class="col-sm-6">
    <div class="well">
       <h3 class="text-primary">
          <span class="fa fa-github"></span> github
       </h3>

        <% if (user.github.token) { %>
        
            <p>id:    <%= user.github.id %></p>
            <p>token: <%= user.github.token %></p>
            <p>profile: <a href="<%= user.github.url %>"><%= user.github.url %></a></p>
            <p>name:  <%= user.github.name %></p>

            <a href="/unlink/github" class="btn btn-primary">Unlink</a>

        <% } else { %>

            <a href="/connect/github" class="btn btn-primary">Connect github</a>
            
        <% } %>
    </div>
 </div>